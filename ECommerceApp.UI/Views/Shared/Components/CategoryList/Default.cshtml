@model CategoryListViewModel

@{
    var controller = Model.IsAdmin ? "admin" : "product";
}

<section class="list-group">
    @if (Model.CurrentCategory == 0)
    {
        <a class="list-group-item active" style="cursor:pointer;" href="/@controller/index?category=0">All Categories</a>
    }
    else
    {
        <a class="list-group-item" style="cursor:pointer;" href="/@controller/index?category=0">All Categories</a>
    }
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        @if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
        <div style="display:flex;">

        <a class="@css" style="cursor:pointer;"
           href="/@controller/index?category=@item.CategoryId">@item.CategoryName</a>
        <button id="edit-@item.CategoryId" onclick="SetEdit(id)">Edit</button>

        </div>
    }
</section>


<script>

    function SetEdit(id) {
        const editElement = document.getElementById(id);
        editElement.style.display = "none";
    }



</script>